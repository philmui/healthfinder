# HealthFinder Frontend - Environment Variables
# Copy this file to .env.local and fill in your values

# API Connection
NEXT_PUBLIC_API_URL=http://localhost:8000

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# Feature Flags
NEXT_PUBLIC_ENABLE_PROVIDER_FINDER=true
NEXT_PUBLIC_ENABLE_BIOMCP=true
NEXT_PUBLIC_ENABLE_CLINICAL_TRIALS=false
NEXT_PUBLIC_ENABLE_GENETICS=false

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_SHOW_BETA_FEATURES=false

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Deployment Info
NEXT_PUBLIC_RELEASE=dev
NEXT_PUBLIC_BUILD_TIME=local

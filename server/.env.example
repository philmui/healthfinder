# HealthFinder API - Environment Variables Template
# Copy this file to .env and fill in the appropriate values

# General application settings
SECRET_KEY=your-secret-key-here  # Generate a secure random key in production
DEBUG=True  # Set to False in production
HOST=0.0.0.0
PORT=8000

# Database settings
DB_TYPE=sqlite  # Options: sqlite, postgres
# SQLite settings (used if DB_TYPE=sqlite)
SQLITE_DB_FILE=healthfinder.db
# PostgreSQL settings (used if DB_TYPE=postgres)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=healthfinder
POSTGRES_PORT=5432

# Authentication settings
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External API keys
BIOMCP_API_KEY=your-biomcp-api-key
PUBMED_API_KEY=your-pubmed-api-key
CLINICALTRIALS_API_KEY=your-clinicaltrials-api-key
BETTERDOCTOR_API_KEY=your-betterdoctor-api-key
PRACTO_API_KEY=your-practo-api-key
PRACTO_CLIENT_ID=your-practo-client-id
ORPHADATA_API_KEY=your-orphadata-api-key
ICD_API_KEY=your-icd-api-key

# Logging settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
